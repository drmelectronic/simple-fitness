{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist/simple-fitness",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firebase": {
    "rules": "firestore.rules"
  }
}
